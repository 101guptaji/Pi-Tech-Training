<Window x:Class="LibraryManagementSystem.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center"> 
        <Label Content="Library Management System" HorizontalAlignment="Center" Foreground="Blue" FontWeight="Bold" Height="100" FontStyle="Italic"/>
        <Button Name="btnIssue" Content="Book Issue" Width="100" Height="50" Margin="10" Click="btnIssue_Click"/>
        <Button Name="btnReturn" Content="Book Return" Width="100" Height="50" Margin="10" Click="btnReturn_Click"/>
    </StackPanel>
</Window>
